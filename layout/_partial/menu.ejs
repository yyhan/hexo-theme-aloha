<div id="menu-sidebar" class="ui left vertical sidebar menu">

    <div id="sidebar-top">
        <div class="content">
            <h3><%= config.title %></h3>
        </div>
    </div>
    <%-partial('_partial/sidebar-card')%>

    <% Object.keys(config.menu).forEach(function(key) { %>
    <% var className = "item"; %>

    <% if (url_for(config.menu[key].value) == '/' + path.replace('/index.html', '') || (url_for(config.menu[key].value) == '/.' && is_home())) { %>
    <% className = "active item"%>
    <% } %>

    <% var item = config.menu[key];%>
    <a href="<%= item.value %>" class="<%= className %>" <%= item.target ? 'target="' + item.target + '"' : ''%>>
        <i class="<%= item.icon %> icon"></i>
        <%= __(item.name) %>
    </a>

    <% }); %>

    <% if(config.algolia && config.algolia.applicationID) {%>

    <div class="ui search item">
        <div class="ui transparent icon input">
            <input id="search-input" type="text" placeholder="<%= __('searchPlaceholder')%>">
            <i class="search link icon"></i>
        </div>
    </div>

    <% } %>
</div>